@model Travel_Website.Models.Tour

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/tourDetailStyle.css"/>
<h2>Details</h2>

<div class="tour-container">
    <dl class="dl-horizontal">
        <dt>
            Mã Tour
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaTour)
        </dd>

        <dt>
            Tên Tour
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenTour)
        </dd>

        <dt>
            Giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gia)
        </dd>

        <dt>
            Ngày Khởi Hành
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayKhoiHanh)
        </dd>

        <dt>
            Ngày Kết Thúc
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayKetThuc)
        </dd>

        <dt>
            Số Người
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoCho)
        </dd>

        <dt>
            Nội Dung
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiDung)
        </dd>

        <dt>
            Tên Loại Tour 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiTour.TenLoaiTour)
        </dd>

        <dt>
            Hình Ảnh
        </dt>

        <dd>
            @{
                var imgsrc = "";
                var base64 = Convert.ToBase64String(Model.HinhAnh.ToArray());
                imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                <img src='@imgsrc' style="max-width:500px;max-height:500px" />
            }
        </dd>

    </dl>
</div>
    <div>
        <hr />
        
    </div>
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
